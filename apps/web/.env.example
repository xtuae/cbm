# ===============================================================================================
# CREDITS MARKETPLACE PLATFORM - FRONTEND ENVIRONMENT VARIABLES
# ===============================================================================================
# Copy this file to .env.local and fill in your actual values
# This file contains frontend-safe configuration only
# NEVER put server secrets here - they would be exposed to browsers!

# ===============================================================================================
# SUPABASE CONFIGURATION (Safe to expose)
# ===============================================================================================

# Supabase project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=your-anonymous-key-here

# ===============================================================================================
# APPLICATION CONFIGURATION
# ===============================================================================================

# Application title and branding
VITE_APP_TITLE="Credits Marketplace"
VITE_APP_DESCRIPTION="Secure digital asset and credit marketplace platform"

# Base URLs for API communication
VITE_API_BASE_URL=http://localhost:3000
VITE_BACKEND_URL=http://localhost:3000/api/v1

# ===============================================================================================
# FEATURE FLAGS
# ===============================================================================================

# Enable/disable specific features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CRASH_REPORTING=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ADMIN_PANEL=true

# ===============================================================================================
# PAYMENT CONFIGURATION (Public Keys Only)
# ===============================================================================================

# Stripe publishable key (safe to expose)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# PayPal configuration
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# Coinbase Commerce (if used)
VITE_COINBASE_API_KEY=your-coinbase-public-key

# ===============================================================================================
# BLOCKCHAIN CONFIGURATION (Frontend-safe)
# ===============================================================================================

# Supported networks (for UI display)
VITE_SUPPORTED_NETWORKS=polygon,ethereum,solana

# Default network
VITE_DEFAULT_NETWORK=polygon

# NILA Token display configuration
VITE_NILA_TOKEN_SYMBOL=NILA
VITE_NILA_TOKEN_DECIMALS=18

# ===============================================================================================
# EXTERNAL SERVICE CONFIGURATION
# ===============================================================================================

# Analytics and tracking (safe to expose)
VITE_ANALYTICS_TRACKING_ID=your-analytics-tracking-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token
VITE_HOTJAR_ID=your-hotjar-id

# Customer support (chat widgets, etc.)
VITE_INTERCOM_APP_ID=your-intercom-app-id
VITE_ZENDESK_KEY=your-zendesk-key

# ===============================================================================================
# FEATURE CONFIGURATION
# ===============================================================================================

# Minimum and maximum purchase amounts
VITE_MIN_PURCHASE_AMOUNT=1.00
VITE_MAX_CREDIT_PURCHASE=10000.00

# Pagination defaults
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# UI/UX configuration
VITE_THEME_DEFAULT=light
VITE_SHOW_WELCOME_TOUR=false

# ===============================================================================================
# DEVELOPMENT CONFIGURATION
# ===============================================================================================

# Enable React development mode features
VITE_ENABLE_REACT_DEVTOOLS=true

# Mock data and test configurations
VITE_ENABLE_MOCK_DATA=false
VITE_TEST_USER_EMAIL=test@example.com

# ===============================================================================================
# SECURITY CONFIGURATION (Frontend-only)
# ===============================================================================================

# Content Security Policy headers (for meta tag injection)
VITE_CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com"

# ===============================================================================================
# DEPLOYMENT CONFIGURATION
# ===============================================================================================

# Deploy environment detection
VITE_APP_ENV=development
VITE_COMMIT_SHA=unknown
VITE_BUILD_TIME=unknown

# ===============================================================================================
# INTEGRATION CONFIGURATION
# ===============================================================================================

# External service URLs
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_PRIVACY_POLICY_URL=https://yourdomain.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
VITE_DOCUMENTATION_URL=https://docs.yourdomain.com

# Social media links
VITE_TWITTER_HANDLE=@yourcompany
VITE_DISCORD_INVITE=your-discord-link
VITE_GITHUB_REPO=https://github.com/yourcompany/yourproject

# ===============================================================================================
# FEATURE NOTIFICATIONS
# ===============================================================================================

# Banner notifications and announcements
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE="Scheduled maintenance in progress. We'll be back soon!"

VITE_BANNER_MESSAGE=""
VITE_BANNER_TYPE="" # success, warning, error, info

# ===============================================================================================
# PRODUCTION SECURITY CHECKLIST
# ===============================================================================================
# Before deploying to production:
# 1. Verify all VITE_ variables are frontend-safe (no secrets)
# 2. Check that all URLs are HTTPS for production
# 3. Update CORS origins in the backend to match deployment URLs
# 4. Enable proper CSP headers
# 5. Disable development-only features
# 6. Enable analytics and monitoring
# 7. Test all external integrations
# ===============================================================================================
